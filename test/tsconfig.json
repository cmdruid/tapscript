{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@cmdcode/tapscript"         : [ "src/index.js"            ],
      "@cmdcode/tapscript/address" : [ "src/lib/addr/index.js"   ],
      "@cmdcode/tapscript/script"  : [ "src/lib/script/index.js" ],
      "@cmdcode/tapscript/sighash" : [ "src/lib/sig/index.js"    ],
      "@cmdcode/tapscript/tapkey"  : [ "src/lib/tap/index.js"    ],
      "@cmdcode/tapscript/tx"      : [ "src/lib/tx/index.js"     ]
    },
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts" ]
}
